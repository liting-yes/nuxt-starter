{
  "name": "nuxt-starter",
  "description": "A nuxt project startup template",
  "author": "liting-yes <luz.liting@gmail.com> (https://liting.ink/)",
  "license": "MIT",
  "homepage": "https://github.com/liting-yes/nuxt-starter#readme",
  "bugs": {
    "url": "https://github.com/liting-yes/nuxt-starter/issues"
  },
  "keywords": [
    "nuxt",
    "template",
    "starter"
  ],
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint . && stylelint \"**/*.{css,scss}\"",
    "format": "eslint --fix . && stylelint --fix \"**/*.{css,scss}\"",
    "commit": "git add . && git-cz",
    "prepare": "npx simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.39.4",
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@commitlint/cz-commitlint": "^17.5.0",
    "@iconify/json": "^2.2.73",
    "@nuxt/image-edge": "1.0.0-28094330.102af81",
    "@nuxthq/ui": "^2.2.1",
    "@nuxtjs/color-mode": "^3.2.0",
    "@nuxtjs/eslint-module": "^4.1.0",
    "@nuxtjs/fontaine": "^0.3.0",
    "@nuxtjs/stylelint-module": "^5.1.0",
    "@types/node": "^18",
    "@unocss/eslint-config": "^0.52.7",
    "@unocss/nuxt": "^0.52.7",
    "@unocss/reset": "^0.52.7",
    "@vueuse/core": "^10.1.2",
    "@vueuse/nuxt": "^10.1.2",
    "commitizen": "^4.3.0",
    "eslint": "^8.41.0",
    "inquirer": "8",
    "lint-staged": "^13.2.2",
    "nuxt": "^3.5.2",
    "nuxt-lodash": "^2.4.1",
    "sass": "^1.62.1",
    "simple-git-hooks": "^2.8.1",
    "stylelint": "^15.6.2",
    "stylelint-config-recommended-scss": "^12.0.0",
    "stylelint-config-recommended-vue": "^1.4.0",
    "typescript": "^5.1.3"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{ts,vue,json,md}": "eslint --fix"
  }
}
